@model OperationViewModel
@{
    ViewBag.PageTitle = "Add Operation";
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}

<div class="submit-button">
    <input type="button" class="btn btn-info" value="Back" onclick="window.location= '@Url.Action( "Index", "Process", new { diagramId = Model.DiagramId })'" />
</div>

<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
        <form method="post" class="theForm" asp-action="AddOperation" asp-controller="Operation">
            <div asp-validation-summary="ModelOnly"></div>
            @Html.HiddenFor(x => x.DiagramId)
            @Html.HiddenFor(x => x.ProcessId)
            <div class="form-group">
                <label asp-for="Lp">Operation number:</label>
                <input type="number" asp-for="Lp" class="form-control">
                <span asp-validation-for="Lp" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name">Operation Name:</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description:</label>
                <input type="text" asp-for="Description" class="form-control">
                <span asp-validation-for="Description" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type">Type:</label>
                @Html.DropDownListFor(m => m.Type, Html.GetEnumSelectList<OperationType>(), "Select", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Employees">Employees Required:</label>
                <input type="number" asp-for="Employees" class="form-control">
                <span asp-validation-for="Employees" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeInMinutes">Duration (in minutes):</label>
                <input type="number" asp-for="TimeInMinutes" class="form-control">
                <span asp-validation-for="TimeInMinutes" class="text-warning"></span>
            </div>
            <div class="form-group">
                <div class="submit-button text-center">
                    <button type="submit" class="btn btn-primary">Add Operation</button>
                </div>
                <div class="text-success text-center">@ViewBag.UserMessage</div>
            </div>
        </form>
    </div>
</div>